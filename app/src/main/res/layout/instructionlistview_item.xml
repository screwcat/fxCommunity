<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whites">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/slide_header_person_pic" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2pt"
            android:layout_toRightOf="@+id/imageView"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/auther"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="发  布  人："
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/noticeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/senderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="XXX"
                    android:textColor="#999" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/auther2"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1pt"
                    android:text="指令标题："
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/noticeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/senderName"
                    android:layout_marginTop="1pt"
                    android:text="XXX"
                    android:textColor="#999" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/auther3"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1pt"
                    android:text="发布时间："
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/createTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/noticeTitle"
                    android:layout_marginTop="1pt"
                    android:text="XXX"
                    android:textColor="#999" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/signingStatus"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:textColor="#9900FF" />

    </RelativeLayout>
</LinearLayout>