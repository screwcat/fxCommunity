<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.taiji.fxsqjw.views.activities.FxLoginActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/toobar_theme">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:navigationIcon="@drawable/button_details_gohome"
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="24dp"
                android:text="请登录"
                android:textColor="@color/whites"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appbar_toolbar"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/login_fx_iv_logo"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_logo" />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:alpha="0.3"
            android:background="@drawable/gray_radius_shape"
            android:layout_below="@id/login_fx_iv_logo">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/login_fx_iv_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/login_fx_iv_logo">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/login_uname" />

            <EditText
                android:id="@+id/userId"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="请输入账号"
                android:textColorHint="@color/whites"
                android:textColor="@color/whites"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_fx_iv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/login_fx_iv_uname">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/login_pwd" />

            <EditText
                android:id="@+id/passwd"
                android:inputType="textPassword"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textColorHint="@color/whites"
                android:textColor="@color/whites"/>
        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_fx_iv_pwd"
            android:background="@drawable/blue_radius_shape"
            android:layout_marginTop="20dp"
            android:onClick="userLogin"
            android:text="登   录"
            android:textColor="@color/whites" />

    </RelativeLayout>


</RelativeLayout>
