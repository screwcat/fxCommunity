<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E0"
    android:orientation="vertical"
    tools:context="com.taiji.fxsqjw.views.activities.openlayer.QkqdOfflineMapActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/toobar_theme">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:navigationIcon="@drawable/button_details_gohome"
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="24dp"
                android:text="考勤签到"
                android:textColor="@color/whites"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/whites">

        <LinearLayout
            android:id="@+id/qkqd_gps_ll_time"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/qiandaotime"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:paddingTop="6dp"
                android:textColor="@color/dark_gray"
                android:text="签到时间:"/>
            <TextView
                android:id="@+id/qkqd_tv_time"
                android:layout_width="match_parent"
                android:paddingTop="6dp"
                android:layout_height="match_parent"
                android:textColor="@color/dark_gray"
                android:text="20:39"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_below="@id/qkqd_gps_ll_time"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/qiandaoaddr"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textColor="@color/dark_gray"
                android:text="签到地点:"/>
            <TextView
                android:id="@+id/qkqd_tv_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dark_gray"
                android:text="红星责任区"/>
            <TextView
                android:id="@+id/qkqd_tv_dutynum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dark_gray"
                android:visibility="gone"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qkqd_gps_ll_qd_success"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/qiandaosuccess"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@color/whites">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:background="@color/whites">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/dark_gray"
                android:text="请拍照添加照片"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:background="@color/whites">

            <ImageView
                android:id="@+id/qkqd_add_iv_item"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/qkqd_add_iv_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/camera_dk"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:background="@color/whites">
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textColor="@color/dark_gray"
            android:text="签到人:"/>
        <TextView
            android:id="@+id/qkqd_tv_qdr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/dark_gray"
            android:text=""/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/qkqd_bt_dk_submit"
            android:layout_width="80dp"
            android:onClick="submitInfo"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/qiandaobt"/>
        <TextView
            android:id="@+id/qkqd_bt_dk_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/qkqd_bt_dk_submit"
            android:text="您已进入考勤区域"
            android:textSize="14dp"/>
        <!--<Button
            android:id="@+id/qkqd_bt_dk_submit"
            android:layout_width="match_parent"
            android:onClick="submitInfo"
            android:background="@color/whites"
            android:visibility="gone"
            android:textColor="#428aae"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:text="提交"/>-->
    </RelativeLayout>
</LinearLayout>
