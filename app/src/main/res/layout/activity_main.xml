<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context="com.taiji.fxsqjw.views.activities.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="677">

    </FrameLayout>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="63"
        android:orientation="horizontal"
        android:background="@drawable/liner_border_top">

        <!-- 导航 -->
        <TextView
            android:id="@+id/nav_guide"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:background="#bfbfbf"
            android:gravity="center"
            android:text="导航"
            android:drawableTop="@drawable/ic_notifications_black_24dp"
            android:textColor="#5e5e5e"
            android:visibility="gone"
            android:paddingTop="3sp"/>

        <!-- 车场 -->
        <TextView
            android:id="@+id/nav_parks"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:background="#bfbfbf"
            android:gravity="center"
            android:text="首页"
            android:drawableTop="@drawable/home_noclick"
            android:textColor="#5e5e5e"
            android:paddingTop="3sp"/>

        <!-- 分割线 -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#cccccc" />
        <!-- 附近 -->
        <TextView
            android:id="@+id/nav_near"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:background="#bfbfbf"
            android:gravity="center"
            android:text="附近"
            android:drawableTop="@drawable/near_nolick"
            android:textColor="#5e5e5e"
            android:paddingTop="3sp"/>

        <!-- 分割线 -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#cccccc" />

        <!-- 预约车位 -->
        <TextView
            android:id="@+id/nav_appointment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="#bfbfbf"
            android:gravity="center"
            android:text="计费"
            android:drawableTop="@drawable/pay_nolick"
            android:textColor="#5e5e5e"
            android:paddingTop="3sp"/>
        <!-- 分割线 -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ccc" />
        <!-- 我的 -->
        <TextView
            android:id="@+id/nav_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="#bfbfbf"
            android:gravity="center"
            android:text="设备"
            android:drawableTop="@drawable/setting_noclick"
            android:textColor="#5e5e5e"
            android:paddingTop="3sp"/>
    </LinearLayout>

</LinearLayout>
